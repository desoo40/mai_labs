<UserControl x:Class="ShowcaseApp.WPF.Controls.SpecialWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab x:Name="tabControl" SelectedSource="/Controls/MiniContentPage.xaml" Layout="Tab">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Description" Source="/Controls/MiniContentPage.xaml" />
                <mui:Link DisplayName="Source XAML" Source="/Controls/MiniXamlPage.xaml" />
                <mui:Link DisplayName="Template XAML" Source="/Controls/MiniXamlTemplatePage.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
